
 <div class="row">
    <div class="col">
        <p>Wynik√≥w <%= companies.length %>  na <%= resultsCount %> </p>
    </div>
    <nav>
        <ul class="pagination">
            <% for(let i = 1 ; i <= pagesCount; i++) {%> 
            <li class="page-item <%- page == i ? 'active' : ''%>">
                <a href="#" class="page-link" data-page="<%= i %>">
                    <%= i %>
                </a>
            </li>
            <% } %> 
        </ul>
    </nav>
  </div>

  <script>
      const changePage = e => {
          e.preventDefault();
          const search = new URLSearchParams(window.location.search);
          search.set('page', e.target.dataset.page);
          const url = window.location.origin + window.location.pathname + '?' + search.toString();
          window.location.href = url;
        }

      document.querySelectorAll('.pagination a').forEach(a => {
          a.addEventListener('click', changePage);
      })
  </script>