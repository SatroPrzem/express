<h1>Lista firm:</h1>
<form method="GET">
  <%- include('partials/search') %> 
  <div class="row">
    <div class="col-3">
<%- include('partials/filters') %> 
    </div>
    <div class="col-9">
      <% companies.forEach(company => { %>
        <div class="card bg-light mb-3">
          <div class="card-body">
            <p class="h3 mb-4"><%= company.name %></p>
            <a href="/firmy/<%= company.slug %>" class="btn btn-primary">Zobacz</a>
            <a href="/firmy/edytuj/<%= company.slug %>" class="btn btn-warning">Edytuj</a>
            <a href="/firmy/usun/<%= company.slug %>" onclick="return confirm('Czy jesteś pewny?')" class="btn btn-danger">Usuń</a>
          </div>
        </div>
      <% }); %>
      <%- include('partials/pagination')%> 
    </div>
  </div>
</form>